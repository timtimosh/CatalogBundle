{% extends 'base.html.twig' %}
{% if product.seoTitle != null %}
    {% block title %}
        {{ product.seoTitle }}
    {% endblock %}
{% endif %}

{% block content %}
    <h1>{{ product.name }}</h1>

    {% if vich_uploader_asset(product, 'mainImageFile') != null %}
        <img src="{{ asset(vich_uploader_asset(page, 'mainImageFile')) | imagine_filter('easypage_show_thumb') }}" alt="{{ product.name }}">

    {% endif %}

    {{ product.description  | raw }}
{% endblock %}






